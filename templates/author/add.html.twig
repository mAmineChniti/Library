{# templates/author/add.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Add Author{% endblock %}

{% block body %}
    <h1>Add a New Author</h1>
    
    {{ form_start(form) }}
        {{ form_row(form) }}
    {{ form_end(form) }}
    {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% endblock %}

