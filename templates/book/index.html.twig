{% extends 'base.html.twig' %}

{% block body %}
    <h1>Search Books by Reference</h1>

    <form method="get" action="{{ path('app_book') }}">
        <input type="text" name="ref" placeholder="Enter reference" value="{{ ref }}">
        <button type="submit">Search</button>
    </form>

    {% if books is not empty %}
        <h2>Search Results:</h2>
        <table>
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>Author Name</th>
                    <th>Reference</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.authorID.username }}</td>
                        <td>{{ book.id }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        {% if ref %}
            <p>No books found for reference "{{ ref }}".</p>
        {% endif %}
    {% endif %}
{% endblock %}
